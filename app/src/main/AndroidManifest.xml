<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iloveallah.moviesapp1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/youtube"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".ContentProvider"
            android:authorities="com.example.iloveallah.moviesapp1"
            android:exported="true">
        </provider>
        <activity android:name=".MainActivity"
            android:label="Pop Movies"
            android:configChanges="orientation|keyboardHidden|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Info"
            android:label="MovieDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"/>


        <activity android:name=".Reviews"
            android:label="MovieReviews"
            android:configChanges="orientation|keyboardHidden|screenSize"
            />


    </application>

</manifest>